extends base.pug

block style 
    style 
        include ../static/style.css
        include ../static/contactstyle.css

block scripts 
    script 
        include ../static/index.js 

block content 
    div.containor
        h1 Contact Us 
        form(action="/contact", method="POST",class="myform")
            input(type="text", name="name" , placeholder="Enter the name") 
            input(type="phone", name="phone", placeholder="Enter the Phone Number" ) 
            input(type="text", name="gender", placeholder="Enter the Gender" ) 
            input(type="email", name="email", placeholder="Enter the Email" ) 
            input(type="text", name="address", placeholder="Enter the Address" ) 
            button(class="btn") submit 
        
